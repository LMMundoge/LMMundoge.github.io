<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantalla_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comier.luciaempresa.myapplication.PantallaInicial"
    android:background="@drawable/list_icon2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenidos a la aplicación"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucía"
        android:layout_gravity="bottom|left"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark" />

    <!--

    layout gravity en un FrameLayout determina la posición de los elementos

    bottom indica la parte inferior del layout, left y right para izquierda y derecha

    el simbolo "|" indica los dos modos, por ejemplo bottom | left alinea en la parte inferior

     e izquierda

    -->



    <Button

        android:text="Jugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BotonJugar"
        android:layout_gravity="bottom|right"

        />


</FrameLayout>
